<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view2"
        android:layout_width="379dp"
        android:layout_height="731dp"
        android:background="#5DCA61"
        android:rotation="-79"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="-283dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="e-Market"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="83dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="376dp"
        android:layout_height="39dp"
        android:fontFamily="sans-serif-medium"
        android:text="¡La comodidad de comprar al alcance de tu mano!"
        android:textColor="@color/white"
        android:textSize="7pt"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="167dp"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view3"
        android:layout_width="379dp"
        android:layout_height="269dp"
        android:background="#EDEAEA"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="347dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:background="#D8D3D3"
        android:text="Contraseña"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="469dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:background="#5462B5"
        android:text="Iniciar Sesión"
        android:textAllCaps="false"
        android:textSize="7pt"
        app:cornerRadius="@android:dimen/app_icon_size"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="532dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes una cuenta?"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="645dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="176dp"
        android:layout_height="52dp"
        android:text="Crea una aquí"
        android:textAllCaps="false"
        android:textColor="#3F51B5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="664dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:background="#D8D3D3"
        android:text="Usuario"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="401dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>