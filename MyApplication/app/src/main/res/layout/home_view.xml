<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_bar_home_view"
        android:layout_width="389dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Busca en e-Market" />

    <ScrollView
        android:id="@+id/scroll_home_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar_home_view"
        tools:ignore="ScrollViewCount">


        <LinearLayout
            android:id="@+id/scroll_view_main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/categorias_home_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <!-- esto se deberÃ­a de cambiar pero no es prioridad -->
                <include
                    layout="@layout/categoria_licores_button"
                    android:layout_width="85dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" />

                <include
                    layout="@layout/categoria_farmacia_button"
                    android:layout_width="85dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp" />

                <include
                    layout="@layout/categoria_mascotas_button"
                    android:layout_width="85dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp" />

                <include
                    layout="@layout/categoria_otros_button"
                    android:layout_width="85dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/productos_home_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/titulo_bebidas_licores_home_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:text="@string/bebidas_y_licores"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextViewEdits" />


                <HorizontalScrollView
                    android:id="@+id/scroll_horizontal_bebidas_licores_home_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="MissingConstraints,ScrollViewCount">


                    <LinearLayout
                        android:id="@+id/scroll_horizontal_bebidas_licores_home_view_main_linear_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                    </LinearLayout>


                </HorizontalScrollView>


                <TextView
                    android:id="@+id/titulo_carnes_home_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:text="@string/carnes"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextViewEdits" />


                <HorizontalScrollView
                    android:id="@+id/scroll_horizontal_carnes_home_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="MissingConstraints,ScrollViewCount">


                    <LinearLayout
                        android:id="@+id/scroll_horizontal_carnes_home_view_main_linear_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                    </LinearLayout>


                </HorizontalScrollView>


                <TextView
                    android:id="@+id/titulo_frutas_verduras_home_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:text="@string/frutas_y_verduras"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextViewEdits" />


                <HorizontalScrollView
                    android:id="@+id/scroll_horizontal_frutas_verduras_home_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="MissingConstraints,ScrollViewCount">


                    <LinearLayout
                        android:id="@+id/scroll_horizontal_frutas_verduras_home_view_main_linear_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                    </LinearLayout>


                </HorizontalScrollView>


                <TextView
                    android:id="@+id/titulo_mascotas_home_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:text="@string/mascotas"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextViewEdits" />


                <HorizontalScrollView
                    android:id="@+id/scroll_horizontal_mascotas_home_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="MissingConstraints,ScrollViewCount">


                    <LinearLayout
                        android:id="@+id/scroll_horizontal_mascotas_home_view_main_linear_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                        <include
                            layout="@layout/producto_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1" />

                    </LinearLayout>


                </HorizontalScrollView>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_home_view">

        <ImageButton
            android:id="@+id/BtnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:onClick="home"
            android:scaleType="fitCenter"
            android:src="@mipmap/inicio"
            android:backgroundTint="@color/white"/>

        <ImageButton
            android:id="@+id/BtnCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/app_name"
            android:onClick="categorias"
            android:scaleType="fitCenter"
            android:src="@mipmap/categoria_g" />

        <ImageButton
            android:id="@+id/BtnCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:onClick="cart"
            android:scaleType="fitCenter"
            android:src="@mipmap/shopping_g"
            android:backgroundTint="@color/white"
            />

        <ImageButton
            android:id="@+id/BtnPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:onClick="profile"
            android:scaleType="fitCenter"
            android:src="@mipmap/profile_g"
            android:backgroundTint="@color/white"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
